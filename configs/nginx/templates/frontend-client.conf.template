# Frontend client server
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name ${FRONTEND_CLIENT_SERVER_NAME};

    ssl_certificate $ssl_certificate;
    ssl_certificate_key $ssl_certificate_key;

    location / {
        default_type text/html;
        return 200 "<html>
	<head>
		<link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Amatic+SC|Ubuntu+Condensed|Yanone+Kaffeesatz|Open+Sans+Condensed:300|Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&amp;display=swap|Yanone+Kaffeesatz:200&amp;display=swap' id='googleFonts'>
		<style>
			body {
				font-family: Yanone Kaffeesatz, sans-serif;
				background: linear-gradient(to right, rgb(39 47 56) 0%, rgb(26 32 40) 100%);
				color: #bac8c9;
				overflow: hidden;
			}
			header {
				align-items: center;
				border-bottom: 1px solid #1c262d;
				display: flex;
				height: 90px;
				position: relative;
				border-bottom: 1px solid #aed1e933;
			}
			.layout-header-title {
				align-self: center;
				font-family: Yanone Kaffeesatz, sans-serif;
				font-size: 1.7rem;
				margin-left: 10px;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
			}
			main {
				width: 100%;
				height: calc(100% - 90px);
				display:flex;
				justify-content: center;
				align-items: center;
				flex-direction:column;
			}
		</style>
	</head>
	<body>
		<header>
			<div class='ml-4 layout-header-title'>
				Траектория
			</div>
		</header>
		<main>
			<h1>
				Извините, сайт временно закрыт
			</h1>
			<div>
				Идут ремонтные работы
			</div>
		</main>
		<footer>
		
		</footer>
	</body>
</html>";
        # proxy_pass http://frontend-client:3000;
    }
}
